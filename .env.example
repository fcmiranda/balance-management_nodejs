# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
DB_PATH=./database.sqlite
DB_SYNCHRONIZE=true
DB_LOGGING=false

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=20

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Swagger Configuration
SWAGGER_URL=http://localhost:8080/api

# Business Rules Configuration
VALIDATION_NAME_MIN_LENGTH=2
VALIDATION_NAME_MAX_LENGTH=100
VALIDATION_PASSWORD_MIN_LENGTH=6
VALIDATION_PASSWORD_MAX_LENGTH=100
VALIDATION_ACCOUNT_NUMBER_PATTERN=^[1-9]\d{9}$
VALIDATION_ACCOUNT_NUMBER_LENGTH=10
VALIDATION_ACCOUNT_NUMBER_MIN_LENGTH=5
VALIDATION_ACCOUNT_NUMBER_MAX_LENGTH=20
VALIDATION_EMAIL_PATTERN=^[^\s@]+@[^\s@]+\.[^\s@]+$
VALIDATION_MIN_TRANSACTION_AMOUNT=0.01
VALIDATION_MAX_TRANSACTION_AMOUNT=1000000
VALIDATION_MIN_POSITIVE_INTEGER=1
VALIDATION_MAX_BALANCE_VALUE=9007199254740991

# Logging Configuration
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=./logs/app.log

# Application Limits
REQUEST_BODY_SIZE_LIMIT=10mb
REQUEST_TIMEOUT_MS=30000
MAX_ACCOUNTS_PER_USER=10
MAX_USERS_TOTAL=10000
